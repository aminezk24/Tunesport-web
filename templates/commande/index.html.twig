{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idc</th>
                <th>Adressec</th>
                <th>Datec</th>
                <th>Statusc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idc }}</td>
                <td>{{ commande.adressec }}</td>
                <td>{{ commande.datec ? commande.datec|date('Y-m-d') : '' }}</td>
                <td>{{ commande.statusc }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'idc': commande.idc}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'idc': commande.idc}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
