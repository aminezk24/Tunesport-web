{% extends 'base.html.twig' %}



{% block body %}
    <div class="container">
        <div class="row">
            <h4 class="mt-5 mb-5">Create mise a jour</h4>

            <div class="col-md-6 offset-md-3">
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                <div class="form-group" >
                    {{ form_label(form.adressel) }}
                    {{ form_widget(form.adressel,{'attr':{'class':'form-control'}})}}
                    {{ form_errors(form.adressel,{'attr':{'class':'text-danger'}})}}

                </div>

                <div class="form-group" >
                    {{ form_label(form.prixP) }}
                    {{ form_widget(form.prixP,{'attr':{'class':'form-control'}})}}
                    {{ form_errors(form.prixP,{'attr':{'class':'text-danger'}})}}

                </div>
                <div class="form-group" >
                    {{ form_label(form.validation) }}
                    {{ form_widget(form.validation,{'attr':{'class':'form-control'}})}}
                    {{ form_errors(form.validation,{'attr':{'class':'text-danger'}})}}

                </div>






                <div class="form-group" >
                    <button class="btn btn-info mt-2 text-white">Submit</button>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}